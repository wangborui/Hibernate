<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernate.PhoneEntity" table="phone" schema="examplebank">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="phoneNumber">
            <column name="phone_number" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="phoneType">
            <column name="phone_type" sql-type="enum('work', 'home', 'parents', 'custom')"/>
        </property>
        <property name="customType">
            <column name="custom_type" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="isDeleted">
            <column name="isDeleted" sql-type="bit(1)"/>
        </property>
    </class>
</hibernate-mapping>